# Description:	The GNU Binutils are a collection of binary tools
# URL:		http://sources.redhat.com/binutils/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	flex texinfo zlib

name=binutils
version=2.37
release=1
source=(https://ftpmirror.gnu.org/gnu/${name}/${name}-${version}.tar.xz)

build() {
	cd $SRC

	mkdir build
	cd build

	../${name}-${version}/configure \
				--prefix=/usr \
				--enable-ld=default \
				--enable-gold=no \
				--enable-plugins \
				--enable-shared \
				--enable-threads \
				--enable-relro \
				--enable-64-bit-bfd \
				--enable-install-libiberty \
				--enable-deterministic-archives \
				--enable-default-hash-style=both \
				--disable-nls \
				--disable-werror \
				--disable-multilib \
				--disable-gdb \
				--with-pic \
				--with-mmap \
				--with-system-zlib \
				--with-pkgversion="SAUX Aarch64"

	make tooldir=/usr

	make -k check < /dev/null || :
	cat {gas/testsuite/gas,ld/ld,binutils/binutils}.sum
	for file in {gas/testsuite/gas,ld/ld,binutils/binutils}.{sum,log}
	do
		ln $file binutils-aarch64-unknown-linux-gnu-$(basename $file) || :
	done
	tar cJf ${name}-${version}-${release}-result-test.tar.xz \
		binutils-aarch64-unknown-linux-gnu-*.{sum,log}
	cp ${name}-${version}-${release}-result-test.tar.xz $PKGMK_PACKAGE_DIR

	make tooldir=/usr DESTDIR=$PKG install

	# Create triplet symlinks
	for f in $PKG/usr/bin/*; do
		ln -s ${f##*/} $PKG/usr/bin/aarch64-unknown-linux-gnu-${f##*/}
	done

	rm  $PKG/usr/lib/lib{bfd,ctf,ctf-nobfd,opcodes}.a
	rm -r $PKG/usr/share/info
	rm $PKG/usr/share/man/man1/{dlltool,windres,windmc}.1

	sed -i "s|-L$SRC[^ ]* ||g" $PKG/usr/lib/lib{bfd,ctf,ctf-nobfd,opcodes}.la
}
